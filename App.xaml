<Application x:Class="CalculatorApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CalculatorApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/NumberButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/OperatorButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/AdditionalButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/WindowButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="70"/>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>
